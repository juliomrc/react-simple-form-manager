{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
